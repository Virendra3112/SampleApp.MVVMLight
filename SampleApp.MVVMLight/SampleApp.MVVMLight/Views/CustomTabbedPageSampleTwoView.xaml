            <ControlTemplate
            x:Key="TabItemTemplate">
                <AbsoluteLayout >
                <Grid ColumnSpacing="0" Padding="0" Margin="0"
                RowSpacing="0" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image
                    Grid.Row="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="50"
                    HeightRequest="50"
                    Aspect="AspectFit"
                    Margin="0" BackgroundColor="Transparent"
                    Source="{TemplateBinding CurrentIcon}" />
                    <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    FontSize="{TemplateBinding FontSize}"
                    Text="Test"
                    TextColor="{TemplateBinding CurrentTextColor}" />

                    <!--<xct:BadgeView
                    Grid.Row="0" Grid.Column="1"
                    BackgroundColor="Red"
                    TextColor="White"
                    Text="1"/>-->
                </Grid>
                    <xct:BadgeView AbsoluteLayout.LayoutBounds="0.6,0.1,20,20" AbsoluteLayout.LayoutFlags="PositionProportional"
                    BackgroundColor="Red"
                    TextColor="White"
                    Text="  "/>

                </AbsoluteLayout>
            </ControlTemplate>

            <Style
                x:Key="TabItemStyle"
                TargetType="xct:TabViewItem">
                <Setter
                    Property="FontSize"
                    Value="12" />
                <Setter
                    Property="TextColor"
                    Value="#979797" />
                <Setter
                    Property="TextColorSelected"
                    Value="#FF0000" />
            </Style>

            <Style
                x:Key="CustomTabStyle"
                TargetType="xct:TabView">
                <Setter
                    Property="IsTabTransitionEnabled"
                    Value="True" />
                <Setter
                    Property="TabStripHeight"
                    Value="48" />
                <Setter
                    Property="TabContentBackgroundColor"
                    Value="#484848" />
                <Setter
                    Property="TabStripPlacement"
                    Value="Bottom" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <Grid ColumnSpacing="0" Padding="0" Margin="0"
                RowSpacing="0">
            <xct:TabView 
                Style="{StaticResource CustomTabStyle}">
                <xct:TabView.TabStripBackgroundView>
                    <BoxView
                        Color="#484848"
                        CornerRadius="0"/>
                </xct:TabView.TabStripBackgroundView>
                <xct:TabViewItem
                    Text="Tab 1"  
                    Icon="icon.png"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    BadgeText="0"
                    BadgeBackgroundColor="Pink"
                    BadgeBackgroundColorSelected="Red"
                    BadgeTextColor="White"
                    Style="{StaticResource TabItemStyle}">
                    <Grid 
                        BackgroundColor="Gray">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="Tab One" />
                    </Grid>
                </xct:TabViewItem>
                
                <xct:TabViewItem
                    Text="Tab 3"  
                    Icon="icon.png"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    Style="{StaticResource TabItemStyle}">
                    <Grid
                        BackgroundColor="Orange">
                        <Label    
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="Tab two" />
                    </Grid>
                </xct:TabViewItem>
            </xct:TabView>
        </Grid>
    </ContentPage.Content>
</ContentPage>